<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Disco Fever</title>
    <link rel="stylesheet" asp-href-include="/styles/dist/bundle.css" asp-append-version="true" />
    <link rel="icon" href="/images/disco ball.ico">

    <script asp-src-include="/scripts/dist/bundle.js" asp-append-version="true"></script>
</head>
<body>

    @await Component.InvokeAsync("Header")

    @if (TempData["message"] != null)
    {
        <div class="layout-message">@TempData["message"]</div>
    }

    <main>
        @RenderBody()
    </main>

    @await Component.InvokeAsync("Footer")

</body>
</html>