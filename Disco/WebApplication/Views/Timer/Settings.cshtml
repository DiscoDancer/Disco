<div class="timer-settings timer-container">

    <img class="timer-logo" src="/images/timer/tomato-icon.png" alt="tomato icon" />

    <h1 class="timer-caption timer-block">
        Tomato Timer
    </h1>

    <form asp-controller="Timer" asp-action="EditActivity">

        <fieldset class="timer-block select-sound-block">
            <label>
                Select Sound
            </label>

            <select>
                <option>
                    80s Classic Alarm
                </option>
            </select>
        </fieldset>

        <fieldset class="timer-block">
            <input type="submit" class="edit-activities-button" value="Edit Activities">

            </input>
        </fieldset>

    </form>

</div>