<div class="timer-settings timer-container">

    <img class="timer-logo" src="/images/timer/tomato-icon.png" alt="tomato icon" />

    <h1 class="timer-caption timer-block">
        Tomato Timer
    </h1>

    <form>

        <fieldset class="timer-block select-sound-block">
            <label>
                Select Sound
            </label>

            <select>
                <option>
                    80s Classic Alarm
                </option>
            </select>
        </fieldset>
    </form>

    <a asp-controller="Timer" asp-action="EditActivities" class="button-achor-wrapper timer-block">
        <button class="edit-activities-button">
            Edit Activities
        </button>
    </a>
</div>