<div class="timer-edit-activity timer-container">

    <img class="timer-logo" src="/images/timer/tomato-icon.png" alt="tomato icon"/>

    <h1 class="timer-caption timer-block">
        Tomato Timer
    </h1>
    
    <form asp-action="EditActivities" class="timer-block">
        <fieldset>
            <label>
                Name
            </label>
            <input type="text" class="name-input" />
        </fieldset>
        <fieldset class="buttons-row timer-block">
            <input type="submit" class="control-button save-button" value="Save"/>
            <input type="button" class="control-button cancel-button" value="Cancel" onclick="history.back()"/>
        </fieldset>
    </form>

</div>