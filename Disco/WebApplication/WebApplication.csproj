<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.0" />
    <PackageReference Include="RestSharp" Version="106.2.2" />
  </ItemGroup>

  <Target Name="BundleStyles" AfterTargets="Build">
    <Exec Command="gulp bundle-styles" />
  </Target>

  <Target Name="BundleScripts" AfterTargets="BundleStyles">
    <Exec Command="gulp bundle-scripts" />
  </Target>
  
</Project>
